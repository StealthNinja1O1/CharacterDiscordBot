# GLM API Configuration
# Get your API key from your GLM provider
GLM_API_KEY=your_glm_api_key_here
GLM_BASE_URL=

# Discord Bot Configuration
# Get token from: https://discord.com/developers/applications
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# Channel ID where the bot will respond
# Enable Developer Mode in Discord, then right-click channel → Copy ID
DISCORD_CHANNEL_ID=your_channel_id_here

# Comma-separated list of user IDs allowed to use admin commands (/togglerandom)
# Right-click username in Discord → Copy ID
DISCORD_ALLOWED_USERS=123456789012345678,987654321098765432

# Bot Behavior Settings
# Bot responds randomly to 1 in X messages (default: 50)
RANDOM_RESPONSE_RATE=50

# Number of previous messages to fetch initially (default: 20)
MAX_HISTORY_MESSAGES=20

# Maximum tokens for context (system prompt + messages, default: 20000)
MAX_CONTEXT_TOKENS=20000
